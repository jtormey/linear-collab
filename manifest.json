{
  "manifest_version": 2,
  "name": "linear-collab",
  "version": "0.1.0",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "menu.html"
  },
  "background": {
    "scripts": [
      "background.build.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://linear.app/*"
      ],
      "js": [
        "content.build.js"
      ]
    }
  ]
}
